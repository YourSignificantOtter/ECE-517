<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :company_name %>
  </div>

  <div class="field">
    <%= form.label :headquarters %>
    <%= form.text_field :headquarters, id: :company_headquarters %>
  </div>

  <div class="field">
    <%= form.label :website %>
    <%= form.text_field :website, id: :company_website %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%= form.select :size, ['1-50', '51-200', '201-500', '501-1000', '1000+']  %>
  </div>

  <div class="field">
    <%= form.label :synopsis %>
    <%= form.text_area :synopsis, id: :company_synopsis %>
  </div>

  <div class="field">
    <%= form.label :founded %>
    <%= form.select :founded, (1950..Time.now.year).to_a, :include_blank => {:founded => "Select year"} %>
  </div>

  <div class="field">
    <%= form.label :industry %>
    <%= form.select :industry, options_for_select(industries) %>
  </div>

  <div class="field">
    <%= form.label :revenue %>
    <%= form.text_field :revenue, id: :company_revenue %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
