<p id="notice"><%= notice %></p>

<p>
  <strong>Company:</strong>
  <% if Job.exists?(@application.job_id) %>
    <%= Job.find(@application.job_id).company %>
  <% else %>
    -----
  <% end %>
</p>

<p>
  <strong>Position:</strong>
  <% if Job.exists?(@application.job_id) %>
    <%= Job.find(@application.job_id).job_title %>
  <% else %>
    -----
  <% end %>
</p>

<p>
  <strong>Applicant Name:</strong>
  <%= User.find(@application.user_id).name %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @application.gender %>
</p>

<p>
  <strong>Additional info:</strong>
  <%= @application.additional_info %>
</p>

<p>
  <strong>Portfolio url:</strong>
  <%= @application.portfolio_url %>
</p>

<p>
  <strong>Linkedin url:</strong>
  <%= @application.linkedin_url %>
</p>

<p>
  <strong>Current company:</strong>
  <%= @application.current_company %>
</p>

<p>
  <strong>Disability status:</strong>
  <%= @application.disability_status %>
</p>

<p>
  <strong>Veteran status:</strong>
  <%= @application.veteran_status %>
</p>

<p>
  <strong>Race:</strong>
  <%= @application.race %>
</p>

<p>
  <strong>Status:</strong>
  <%= @application.status %>
</p>

<p>
  <strong>Resume:</strong>
  <% if @application.resume_url %>
    <%= link_to "Dowload resume", @application.resume_url %>
  <% else %>
    ---
  <% end %>
</p>

<% if (current_role == :job_seeker || :admin) || (current_role == :recruiter && current_user.id == Job.find(@application.job_id).user_id) %>
  <%= link_to 'Edit', edit_application_path(@application) %> |
  <%= link_to 'Destroy', @application, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', applications_path %>
